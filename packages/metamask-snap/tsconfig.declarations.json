{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"declaration": true,
		"outDir": "./dist/lib/types",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"lib": ["ES6", "DOM"],
		"emitDeclarationOnly": true
	},
	"include": [
		"src/lib"
	],
	"exclude": ["**/*.spec.ts", "**/*.spec.ts", "**/*.test.ts", "**/__tests__/**/*"]
}
